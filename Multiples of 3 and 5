#include "stdafx.h"
#include <iostream>


int _tmain(int argc, _TCHAR* argv[])

{
	int sum = 0;
	short int count = 1;
	while( (3*count) < 1000){
		sum += 3*count;
		count++;
	}
	count = 1;
	while( (5*count) < 1000){
		if (count%3){
			sum += 5*count;
		}
		count++;
	}
	std::cout << "Sum is  " << sum << std::endl;
	return 0;
}
